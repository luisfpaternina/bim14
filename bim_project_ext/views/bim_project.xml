<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_bim_project_form_has_account" model="ir.ui.view">
        <field name="name">bim.project.form.inherit</field>
        <field name="model">bim.project</field>
        <field name="inherit_id" ref="base_bim_2.view_form_bim_project"/>
        <field name="arch" type="xml">

            <xpath expr="//field[(@name='company_id')]" position="after">
                <field name="has_analytic_account" invisible="1"/>
            </xpath>

            <xpath expr="//sheet" position="before">
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                        attrs="{'invisible': [('has_analytic_account', '!=', False)]}">
                    This work has no associated analytical account
                </div>
            </xpath>

        </field>
    </record>
</odoo>
   